{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "commonjs",                     
    "strict": true,                          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",                      // Compiled JS will go to the 'dist' folder
    "rootDir": "../",                      // Source TS files are in the 'src' folder
    "paths": {
      "$shared/*": ["../shared/*"]           // Use the shared folder in the parent directory
    }
  },
  "include": [
    "src/**/*.ts",
    "../shared/**/*.ts"  // If using shared TS files, include them
  ]
}
