{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",                
    "module": "commonjs",                     
    "strict": true,                          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",                      // Compiled JS will go to the 'dist' folder
    "rootDir": "./src"                       // Source TS files are in the 'src' folder
  },
  "include": [
    "src/**/*.ts"                            // Include all TS files in 'src'
  ]
}
